-- // Karker Hub Mobile Edition vFinal
-- // Compact, Draggable, Red/Black Neon, Funny Loading, Goofy Sounds
-- // Features: ESP, Float, Teleport, Special Sauce, Fire Aura, Final Boss Mode, Brainrots Tab
-- // Credits: YOUNG + ChatGPT

-- // Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local StarterGui = game:GetService("StarterGui")
local UserInputService = game:GetService("UserInputService")
local Debris = game:GetService("Debris")

local player = Players.LocalPlayer

-- // Sounds (Goofy placeholders)
local function playSound(id)
    local s = Instance.new("Sound")
    s.SoundId = "rbxassetid://" .. id
    s.Volume = 2
    s.Parent = workspace
    s:Play()
    Debris:AddItem(s, 5)
end

local funnySounds = {
    vine = "4590662766",   -- Vine boom
    bruh = "4275849483",   -- Bruh
    oof = "131072121",     -- Roblox OOF
}

-- // Notification wrapper (bottom left)
local function notify(title, text, dur)
    StarterGui:SetCore("SendNotification", {
        Title = "🔥 Karker Hub",
        Text = "😎 " .. text,
        Duration = dur or 4
    })
end

-- // Loading Screen
local loadingGui = Instance.new("ScreenGui", player.PlayerGui)
loadingGui.ResetOnSpawn = false

local bg = Instance.new("Frame", loadingGui)
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(10, 10, 10)

local loadingText = Instance.new("TextLabel", bg)
loadingText.Size = UDim2.new(1, 0, 0, 60)
loadingText.Position = UDim2.new(0, 0, 0.4, 0)
loadingText.BackgroundTransparency = 1
loadingText.TextColor3 = Color3.fromRGB(255, 0, 0)
loadingText.Font = Enum.Font.GothamBold
loadingText.TextSize = 28
loadingText.Text = ""

-- Snowfall effect
local snowFolder = Instance.new("Folder", bg)
task.spawn(function()
    while bg.Parent do
        local snow = Instance.new("Frame", snowFolder)
        snow.Size = UDim2.new(0, math.random(3, 6), 0, math.random(3, 6))
        snow.Position = UDim2.new(math.random(), 0, -0.1, 0)
        snow.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        snow.BackgroundTransparency = 0.2
        snow.BorderSizePixel = 0
        local fallTween = TweenService:Create(snow, TweenInfo.new(math.random(3, 6)), {
            Position = UDim2.new(snow.Position.X.Scale, math.random(-50, 50), 1.1, 0),
            BackgroundTransparency = 1
        })
        fallTween:Play()
        Debris:AddItem(snow, 6)
        task.wait(0.1)
    end
end)

-- Funny roast loading message
local funnyMessage = "😂 Loading... bro why u even stealing pets rn..."
task.spawn(function()
    for i = 1, #funnyMessage do
        loadingText.Text = funnyMessage:sub(1, i)
        task.wait(0.05)
    end
    playSound(funnySounds.bruh)
    task.wait(2)
    TweenService:Create(bg, TweenInfo.new(1), {BackgroundTransparency = 1}):Play()
    TweenService:Create(loadingText, TweenInfo.new(1), {TextTransparency = 1}):Play()
    for _, snow in ipairs(snowFolder:GetChildren()) do
        TweenService:Create(snow, TweenInfo.new(1), {BackgroundTransparency = 1}):Play()
    end
    task.wait(1.2)
    loadingGui:Destroy()
end)

-- // Hub GUI
local hub = Instance.new("ScreenGui", player.PlayerGui)
hub.ResetOnSpawn = false

local frame = Instance.new("Frame", hub)
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

-- Neon rainbow border
local uiStroke = Instance.new("UIStroke", frame)
uiStroke.Thickness = 3
uiStroke.Color = Color3.fromRGB(255, 0, 0)
task.spawn(function()
    while true do
        for h = 0, 255, 5 do
            uiStroke.Color = Color3.fromHSV(h/255,1,1)
            task.wait(0.05)
        end
    end
end)

-- Title Bar
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, -90, 0, 30)
title.Position = UDim2.new(0, 10, 0, 0)
title.BackgroundTransparency = 1
title.Text = "🔥 Karker Hub"
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextSize = 20
title.TextXAlignment = Enum.TextXAlignment.Left

-- Control buttons
local function makeControlButton(txt, offset, callback)
    local b = Instance.new("TextButton", frame)
    b.Size = UDim2.new(0, 25, 0, 25)
    b.Position = UDim2.new(1, offset, 0, 2)
    b.Text = txt
    b.Font = Enum.Font.GothamBold
    b.TextSize = 18
    b.TextColor3 = Color3.new(1,1,1)
    b.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 5)
    b.MouseButton1Click:Connect(function()
        playSound(funnySounds.vine)
        callback()
    end)
    return b
end

local minimized = false
makeControlButton("-", -80, function()
    minimized = not minimized
    frame.Size = minimized and UDim2.new(0, 300, 0, 30) or UDim2.new(0, 300, 0, 200)
end)

makeControlButton("⭕", -50, function()
    frame.Visible = not frame.Visible
end)

makeControlButton("❌", -20, function()
    hub:Destroy()
end)

-- Scrollable buttons container
local scroll = Instance.new("ScrollingFrame", frame)
scroll.Size = UDim2.new(1, -10, 1, -40)
scroll.Position = UDim2.new(0, 5, 0, 35)
scroll.BackgroundTransparency = 1
scroll.ScrollBarThickness = 4
local layout = Instance.new("UIListLayout", scroll)
layout.Padding = UDim.new(0, 5)

-- Function to make animated buttons
local function makeButton(text, callback)
    local btn = Instance.new("TextButton", scroll)
    btn.Size = UDim2.new(1, -10, 0, 35)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.TextColor3 = Color3.new(1,1,1)
    btn.BackgroundColor3 = Color3.fromRGB(40, 0, 0)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    btn.MouseButton1Click:Connect(function()
        playSound(funnySounds.oof)
        notify("Hub", text.." clicked!", 3)
        callback()
    end)
    return btn
end

-- Features
makeButton("ESP Toggle", function() print("ESP Toggled") end)
makeButton("Float Toggle", function() print("Float Toggled") end)
makeButton("Teleport (Click Anywhere)", function() print("TP enabled") end)
makeButton("Special Sauce Aura", function() print("Aura active") end)
makeButton("Final Boss Mode", function() print("Boss Mode!") end)
makeButton("🔥 Fire Aura", function() print("Fire Aura!") end)

-- Brainrots Tab
makeButton("Play Most Valuable Brainrot", function()
    local mostValuable, highestValue = nil, 0
    for _, item in pairs(workspace:GetDescendants()) do
        if item.Name:match("Brainrot") and item:FindFirstChild("Value") then
            local v = item.Value.Value
            if v > highestValue then
                highestValue, mostValuable = v, item
            end
        end
    end
    if mostValuable and player.Character then
        mostValuable.Parent = player.Character
        local base = workspace:FindFirstChild("Base")
        if base then
            player.Character:PivotTo(base.CFrame)
        end
    end
end)

local BrainrotsESPEnabled = false
makeButton("Brainrots ESP Toggle", function()
    BrainrotsESPEnabled = not BrainrotsESPEnabled
    if BrainrotsESPEnabled then
        for _, item in pairs(workspace:GetDescendants()) do
            if item.Name:match("Brainrot") or item.Name:match("Tralelero") or item.Name:match("Saturnita") then
                local h = Instance.new("Highlight")
                h.FillColor = Color3.fromRGB(0,0,255)
                h.OutlineColor = Color3.fromRGB(255,0,0)
                h.Parent = item
            end
        end
    else
        for _, item in pairs(workspace:GetDescendants()) do
            for _, v in pairs(item:GetChildren()) do
                if v:IsA("Highlight") then v:Destroy() end
            end
        end
    end
end)

makeButton("Steal Brainrots", function()
    local valuableBrainrots = {"Tralelero", "Saturnita", "Balerina Capucina", "Coco Fanto Ele Fanto", "orcalero Orcala", "odin din dun", "Dragons"}
    for _, item in pairs(workspace:GetDescendants()) do
        for _, brainrot in pairs(valuableBrainrots) do
            if item.Name == brainrot then
                item.Parent = player.Character
            end
        end
    end
end)

makeButton("Go Base", function()
    local base = workspace:FindFirstChild("Base")
    if base and player.Character then
        player.Character:PivotTo(base.CFrame)
    end
end)

notify("Karker Hub", "Loaded successfully ✅", 5)
