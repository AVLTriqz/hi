-- Themes
local themes = {
    Neon = { bg = Color3.fromRGB(12,12,18), accent = Color3.fromRGB(80,200,255) },
    Dark = { bg = Color3.fromRGB(14,14,18), accent = Color3.fromRGB(120,120,220) },
    Sunset = { bg = Color3.fromRGB(32,12,10), accent = Color3.fromRGB(255,140,80) }
}

local function applyTheme(name)
    local t = themes[name] or themes.Neon
    hub.BackgroundColor3 = t.bg
    hubStroke.Color = t.accent
    watermark.TextColor3 = t.accent:lerp(Color3.fromRGB(200,200,220), 0.35)
    LocalPlayer:SetAttribute("YHub_Theme", name)
    showToast("Theme", "Applied theme: "..name, 2.2)
end

